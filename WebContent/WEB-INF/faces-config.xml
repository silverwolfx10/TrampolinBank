<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
	
	<managed-bean>
		<managed-bean-name>conta</managed-bean-name>
		<managed-bean-class>br.com.trampolinbank.manegedbean.ContaManegedBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>transferencia</managed-bean-name>
		<managed-bean-class>br.com.trampolinbank.manegedbean.TransferenciaManegedBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>pagamento</managed-bean-name>
		<managed-bean-class>br.com.trampolinbank.manegedbean.PagamentoManagerBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>extrato</managed-bean-name>
		<managed-bean-class>br.com.trampolinbank.manegedbean.ExtratoManegedBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>comprovante</managed-bean-name>
		<managed-bean-class>br.com.trampolinbank.manegedbean.ComprovanteManegedBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>switcher</managed-bean-name>
		<managed-bean-class>br.com.trampolinbank.manegedbean.SwitcherManagedBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	
 <application>
	<resource-bundle>
			<base-name>br.com.trampolinbank.messages.messages</base-name>
			<var>msg</var>
		</resource-bundle>
	
	<locale-config>
		<default-locale>pt_BR</default-locale>
		<supported-locale>pt_BR</supported-locale>
		<supported-locale>en_US</supported-locale>
	</locale-config>
	
	<message-bundle>
		br.com.trampolinbank.messages.messages
	</message-bundle>
</application>
	
</faces-config>
